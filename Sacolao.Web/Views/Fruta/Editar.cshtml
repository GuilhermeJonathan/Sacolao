@model Sacolao.Aplicacao.GestaoDeFrutas.Modelos.ModeloDeEdicaoDeFruta

@{ViewData["Title"] = "Editar Fruta"; }

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Fruta" )">Frutas</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form role="form" action="@Url.Action("Editar", "Fruta")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-table"></i> Editar Fruta </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="Nome">Nome:</label>
                                        <input type="text" value="@Model.Nome" class="form-control" id="Nome" name="Nome" >
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="Descricao">Descrição:</label>
                                        <input type="text" value="@Model.Descricao" class="form-control" id="Descricao" name="Descricao">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="Foto">Foto:</label>
                                        <input type="text" value="@Model.Foto" class="form-control" id="Foto" name="Foto">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label for="Quantidade">Quantidade:</label>
                                        <input type="text" value="@Model.QuantidadeEstoque" class="form-control" id="QuantidadeEstoque" name="QuantidadeEstoque">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label for="Valor">Valor:</label>
                                        <input type="text" value="@Model.Valor" class="form-control" id="Valor" name="Valor">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Index", "Fruta")" class="btn btn-default float-left">Voltar</a>
                            <button type="submit" class="btn btn-info float-right">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
